#include <iostream>     
#include <cstring>

using namespace std;    
#define MAX_BOOKS 2 
#define TRUE 1

struct books{         
  
    char bookname[30];
    char author[30];
    int price;
    int copies;
    
}b[10];

void book_details(){ 
    int i = 0;
    for(i=0;i<MAX_BOOKS;i++){        
                    cout<<"\nENTER THE NAME OF THE BOOK: ";
                    cin>>b[i].bookname;
                    cout<<"ENTER THE NAME OF THE AUTHOR: ";
                    cin>>b[i].author;
                    cout<<"ENTER THE PRICE OF THE BOOK : ";
                    cin>>b[i].price;
                    cout<<"ENTER THE NUMBER OF COPIES  : ";
                    cin>>b[i].copies;
                }
    }

void display(){
int i;
for(i = 0; i<MAX_BOOKS; i++){
                    cout << "\n\nNAME OF THE BOOK : "<< b[i].bookname << endl;
                    cout << "NAME OF THE AUTHOR : "<< b[i].author << endl;
                    cout << "PRICE : " << b[i].price << endl;   
                    cout << "NUMBER OF COPIES : " << b[i].copies;
}
}

void search_byname(){
    int i;
    char book[30];
    cout<<"PLEASE ENTER THE NAME OF THE BOOK TO BE SEARCHED: ";
    cin>>book;
    for(i = 0; i<MAX_BOOKS; i++){
    int x = strcmp(book,b[i].bookname);
    if(x==0){
        cout<<"THE BOOK IS PRESENT IN THE LIST";
    }
    else
    cout << "THE BOOK IS NOT PRESENT IN THE LIST";
}
    
}

void search_byaname(){
    
    int i;
    char abook[30];
    cout<<"ENTER THE NAME OF THE AUTHOR OF THE BOOK: ";
    cin>>abook;
    int counter;
    for(counter = 0; counter<MAX_BOOKS; counter++)
    {
        int x = strcmp(abook,b[i].author);
        if(x!=0){
            cout << "NOT FOUND";
        }
        else
        {
            cout << "FOUND";
        }
    }
}

void sortbooks(){
    
}

int main()
{
    int i = 0;
    struct books b[10];
    int option;
    do{
    cout<<"\n\n***** MAIN MENU *****\n";
    cout<<"1. ENTER BOOK DETAILS\n";
    cout<<"2. DISPLAY BOOK DETAILS\n";
    cout<<"3. SEARCH BOOK BY NAME\n";
    cout<<"4. SEARCH BOOK BY AUTHORS NAME\n";
    cout<<"5. SORT BOOK LIST BY BOOK NAME\n";
    cout<<"6. EXIT\n";
    
    cout<<"\nEnter your option: ";
    cin>>option;
    
    switch(option){
        case 1: book_details();
            break;
        case 2: display();
            break;
        case 3: search_byname();
            break;
        case 4: search_byaname();
            break;
        case 5: sortbooks();
            break;
        case 6: return 0;
        default: cout<<"\nEnter an option between 1 to 6. Thank You!";
    }
    }while(TRUE);
    
}
